<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Files Todo</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gradient-to-r from-purple-100 to-indigo-100 min-h-screen flex items-center justify-center font-sans">

    <div class="bg-white shadow-lg rounded-xl w-full max-w-4xl p-8">
        <h1 class="text-4xl font-bold text-center text-indigo-700 mb-6">üìù File Manager To-Do</h1>

        <!-- File list as todo -->
        <ul class="space-y-3">
            <% files.forEach(file=> { %>
                <li
                    class="flex items-center justify-between bg-indigo-50 p-4 rounded-lg shadow hover:bg-indigo-100 transition-all">
                    <div class="flex items-center gap-3">
                        <input type="checkbox" class="w-5 h-5 text-indigo-600 border-gray-300 rounded">
                        <a href="/files/<%= file %>" class="text-lg font-medium text-indigo-700 hover:underline">
                            <%= file %>
                        </a>
                    </div>
                    <div class="">
                        <a href="/edit/<%= file %>"
                            class="text-sm hover:text-gray-400 inline-block hover:underline text-gray-500 transition-all duration-500">üìÑEdit
                            Filename</a>
                        
                    </div>
                </li>
                <% }) %>
        </ul>

        <!-- Create new file -->
        <div class="mt-10 bg-indigo-50 p-6 rounded-lg shadow">
            <h2 class="text-xl font-semibold text-indigo-800 mb-4">‚ûï Add a New File</h2>
            <form action="/create" method="POST" class="space-y-4">
                <input type="text" name="title" placeholder="Enter file title"
                    class="w-full px-4 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    required>

                <textarea name="details" placeholder="File content..." rows="4"
                    class="w-full px-4 py-2 border border-indigo-300 rounded-md focus:outline-none focus:ring-2 focus:ring-indigo-500"
                    required></textarea>

                <button type="submit"
                    class="w-full bg-indigo-600 text-white py-2 rounded-md hover:bg-indigo-700 transition-all">Create
                    File</button>
            </form>
        </div>
    </div>

</body>

</html>